<style>
    body {
        background-color: #85FFBD;
        background-image: linear-gradient(0deg, #85FFBD 46%, #FFFB7D 100%);
    }
</style>
<br />
<h1 class="style: text-center">TacocaT - Palindrome Test</h1>
<br />
<hr />
<br />
<form asp-action="Solve">
    <div class="row">
        <div class="col offset-1"></div>
        <div class="col"><input type="text" name="userText" placeholder="Enter Text Here" /></div>
        <div class="col"><button class="btn btn-outline-dark" type="submit" id="aButton">Check for Palindrome</button></div>
        <div class="col offset-1"></div>
    </div>
</form>
<br />
<hr />
<br />
<div class="row">
    <div class="col">
        <h6>The user input word:</h6>
        <p>@ViewData["Input"]</p>
    </div>
    <div class="col">
        <h6>The user input word backwards is:</h6>
        <p>@ViewData["Reversed"]</p>
    </div>
    <div class="col">
        <h6>Is the user input word a palindrome?</h6>
        <p>@ViewData["Result"]</p>
    </div>
</div>